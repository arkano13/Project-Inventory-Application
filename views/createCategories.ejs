    </nav>

    <div class="page">

        <div class="page-header">
            <p class="page-label">Gesti√≥n</p>
            <h1>Categor√≠as <span>Registradas</span></h1>
        </div>

        <div class="table-section">
            <h2>Lista de categor√≠as</h2>
    
            <div class="table-wrap">
                <% if (!categories || categories.length === 0) { %>
                    <p class="empty-row">No hay categor√≠as registradas a√∫n.</p>
                <% } else { %>
                    <table>
                        <thead>
                            <tr>
                                <th>Nombre</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody id="tableBody">
                            <% categories.forEach(cat => { %>
                                <tr data-search="<%= cat.name.toLowerCase() %>">
                                    <td><%= cat.name %></td>
                                    <td>
                                        <div class="td-actions">
                                            <a href="/categories/<%= cat.id %>/edit" class="btn-edit">‚úèÔ∏è Editar</a>


                                          <form id="delete-cat-<%= cat.id %>" action="/categories/<%= cat.id %>/delete" method="POST">
                                          <button type="button" onclick="confirmarAccion('delete-cat-<%= cat.id %>', '<%= cat.id %>', 'category')" class="btn-delete">üóë Borrar</button>
                                          </form>


                                         
                                        </div>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                <% } %>
            </div>
        </div>


        <div class="form-section">
            <h2>Nueva categor√≠a</h2>
            <div class="form-card">

                <% if (errors && errors.length > 0) { %>
                    <ul class="errors">
                        <% errors.forEach(error => { %>
                            <li><%= error.msg %></li>
                        <% }) %>
                    </ul>
                <% } %>

                <form action="/createCategories" method="POST">
                    <div class="field">
                        <label for="name">Nombre de la categor√≠a</label>
                        <input type="text" name="name" id="name" placeholder="Ej: Ciencia Ficci√≥n" required>
                    </div>
                    <button type="submit" class="btn-submit">Crear Categor√≠a</button>
                </form>
            </div>
        </div>

    </div>

    <script>
 async function confirmarAccion(formId, bookId) {
  const password = prompt("Ingresa la contrase√±a de administrador:");
  if (password === null) return;

  const response = await fetch(`/${bookId}/delete`, {
    method: "POST",
    headers: { "Content-Type": "application/json" },
    body: JSON.stringify({ password })
  });

  if (response.ok) {
    window.location.href = "/";
  } else {
    alert("Contrase√±a incorrecta ‚ùå");
  }
}
    </script>

</body>
</html>